{
  "manifest_version": 2,
  "name": "Kindle Article to EPUB",
  "version": "1.0",
  "description": "Extrae el contenido principal de un art√≠culo y lo convierte a EPUB para Kindle.",
  "permissions": [
    "activeTab",
    "storage",
    "*://*/*",
    "downloads",
    "tabs",
    "identity"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["readability.js", "JSZip.js", "content_script.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    "readability.js",
    "JSZip.js"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "oauth2": {
    "client_id": "TU_CLIENT_ID.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/gmail.send"
    ]
  }
} 